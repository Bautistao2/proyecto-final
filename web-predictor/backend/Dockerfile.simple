FROM python:3.12-slim

WORKDIR /app

COPY requirements_app1.txt .
RUN pip install --no-cache-dir -r requirements_app1.txt

COPY src ./src

# Configurar variables de entorno para indicar que estamos en Docker
ENV DOCKER=true
ENV PYTHONPATH="${PYTHONPATH}:/app"

EXPOSE 8000

